
<hr><h4>Celebrate your special occasion by choosing from our quality selection of cakes.<br>Please allow at least 48 hours for all custom cake orders.</h4><hr>
    <div class="row">
        <% @cakes.to_a.each do |elem| %>
            <div class="col s12 m6 l4">
                <div class="card large">
                    <div class="card-image">
                        <img src="<%= elem.image %>">
                        <span class="card-title"></span>
                    </div>
                    <div class="card-content">
                        <p><%= elem.description %></p>
                    </div>
                    <div class="card-action">
                        <a href="#">"<%= elem.price %>"</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>             